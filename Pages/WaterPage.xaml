<Page x:Class="Pizza.Pages.WaterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pizza.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="360" d:DesignWidth="792"
      Title="WaterPage">

    <Grid>
		<Image x:Name="Pipironi" Source="/Pizza;component/Resources/fanta.jpg" HorizontalAlignment="Left" Height="165" Margin="26,24,0,0" VerticalAlignment="Top" Width="170"/>
